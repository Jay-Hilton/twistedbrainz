<title>TwistedBrainz - Feed</title>
<div class="page-header container">
  <div class="span4">
    <h1>All Statuses</h1>
  </div>
</div>
<div id="status-btn">
  <%= link_to "New Status", new_status_path, class: "btn btn-primary btn-large" %>
</div>

<% @statuses.each do |status| %>
<div class="status">
  <div class="row">
    <div class="span1">
      <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user), class: 'gravatar' %>
    </div>
    <div class="span7">
      <strong><%= status.user.profile_name %></strong>
      <p><%= status.content %></p>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status, class: "timeago" %>
        <span class="admin">
          <i id="statuspipe">| </i><%= link_to "Edit", edit_status_path(status), class: "statusedit" %><i id="statuspipe"> |</i>
          <%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?" }, class: "statusdelete" %>
        </span>
      </div>
    </div>
  </div>
</div>
<% end %>