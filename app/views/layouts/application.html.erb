      <!-- Main navigation -->
        <i class="pull-right">
          <%= link_to home_path do %><i class="<%= "active" if @home_active %>" id="home">
            <i class="icon-home"></i>
          </i><% end %>
          <%= link_to video_path do %><i class="<%= "active" if @video_active %>" id="navlink" title="TwistedBrainz - Video">
            <i class="icon-facetime-video"></i>
          </i><% end %>
          <%= link_to about_path do %><i class="<%= "active" if @about_active %>" id="navlink" title="TwistedBrainz - About">
            <i class="icon-book"></i>
          </i><% end %>
          <%= link_to feed_path do %><i class="<%= "active" if @statuses_active %>" id="navlink" title="TwistedBrainz - Feed">
            <i class="icon-group"></i>
          </i><% end %>
        </i>
      </div>
    </div>
    <!-- NavBar End -->
    <!-- UnderNavBar -->
    <div id="undernavbar" class="navbar-static-top">
      <div class="container">
          <% if user_signed_in? %>
              <%= link_to do %><i id="navlinkprofile">
                <%= current_user.full_name %>
              </i><% end %>
              <%= link_to logout_path do %><i id="navlinkright">
                Log Out
              </i><% end %>
              <%= link_to profiles_show_path do %><i id="navlinkicon">
                  <i class="icon-user"></i>
                </i><% end %>
                <%= link_to edit_path do %><i id="navlinkicon">
                  <i class="icon-pencil"></i>
                </i><% end %>
                <%= link_to new_status_path, class: "pull-right" do %><i id="navlinkstatus">
                  New Status
                </i><% end %>
          <% else %>
            <%= link_to register_path do %><i id="navlinkregister">
              Register
            </i><% end %>
            <%= link_to login_path do %><i id="navlinkright">
              Log In
            </i><% end %>
          <% end %>
      </div>
    </div>
    <!-- UnderNavBar End --> 
    <!-- Page Content -->
    <div class="container">
        <% flash.each do |type, message| %>
          <div class="alert <%= flash_class type %>">
            <button class="close" data-dismiss="alert">&times</button>
            <%= message %>
          </div>
        <% end %>
      <div class="page">
        <div class="container">
            <%= yield %>
        </div><!--/row-->
      </div>
      <!-- Page Content End -->
      <!-- NavBar Bottom -->
      <footer id="navbottom">
        <div class="navbar-static-bottom">
            <a href="#" id="copyright">&copy; TwistedBrainz 2013</a><br>
            <a href="http://www.youtube.com/user/MrTwistedBrainz" class="footer-links">Channel</a><i class="bottompipe"> |</i>
            <a href="http://instagram.com/twistedbrainz" class="footer-links">Instagram</a><br>
            <%= link_to "Home", home_path, class: "footer-links"  %><i class="bottompipe"> |</i>
            <%= link_to "Video", video_path, class: "footer-links"  %><i class="bottompipe"> |</i>
            <%= link_to "About", about_path, class: "footer-links"  %><i class="bottompipe"> |</i>
            <%= link_to "Feed", feed_path, class: "footer-links"  %><br>
        </div>
      </footer>
      <!-- NavBar Bottom End -->
    </div> <!-- /container -->

    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

