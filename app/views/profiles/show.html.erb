<div class="page-header container">
  <div class="span4">
    <h1><%= @user.full_name %></h1>
  </div>
</div>
<div id="profilestatus">
  <% if @statuses %>
    <% @statuses.each do |status| %>
      <div class="well span11">
        <%= status.content %>
        <hr />
        <%= link_to time_ago_in_words(status.created_at) + " ago", status_path(status) %>
      </div>
    <% end %>
  <% end %>
</div>