<h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "well" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

    <%= f.input :password, "New password" %><br />

    <%= f.input :password_confirmation, "Confirm new password" %><br />

  <%= f.button :submit, "Change my password" class: "btn-primary" %>
  <%= link_to "Cancel", :back, class: "btn" %>
<% end %>

<%= render "devise/shared/links" %>
