<title>TwistedBrainz - Register</title>
<div>
  <div>
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: ""}) do |f| %>
      <%= devise_error_messages! %>
      <div class="signup">

        <fieldset>
          <div class="page-header">
            <h1>Sign up</h1>
          </div>

          <%= f.input :first_name %><br />

          <%= f.input :last_name %><br />

          <%= f.input :profile_name %><br />

          <%= f.input :email %><br />

          <%= f.input :password %><br />

          <%= f.input :password_confirmation %><br />
          
          <%= f.button :submit, "Sign up", class: "btn-primary" %>
          <%= link_to "Cancel", :back, class: "btn btn-info" %>

        </fieldset>
    <% end %>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>