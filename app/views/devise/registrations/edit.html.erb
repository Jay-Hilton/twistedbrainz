
<div class="row">
  <div class="span4">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "well"}) do |f| %>
      <%= devise_error_messages! %>

        <fieldset>
          <div class="page-header">
            <h2>Edit <%= resource_name.to_s.humanize %></h2>
          </div>

          <%= f.input :email %><br />

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

          <%= f.input :password %><br />

          <%= f.input :password_confirmation %><br />

          <%= f.input :current_password %><br />

        <%= f.button :submit, "Update", class: "btn-primary" %>
        <%= link_to "Cancel", :back, class: "btn" %>

        </fieldset>
    <% end %>

    <h3>Cancel my account</h3>

    <p><%= button_to "Cancel Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-info" %></p>

  </div>
</div>